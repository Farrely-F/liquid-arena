#!/usr/bin/env sh

set -e # Exit on any error

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for formatting and linting
echo "ğŸ“ Checking code formatting and linting..."
if ! npx lint-staged; then
  echo "âŒ Linting/formatting failed. Please fix the issues and try again."
  exit 1
fi

# Run type checking
echo "ğŸ”§ Running TypeScript type checking..."
if ! npm run type-check; then
  echo "âŒ Type checking failed. Please fix the type errors and try again."
  exit 1
fi

if ! npm run lint; then
  echo "âŒ Linting failed. Please fix the issues and try again."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"